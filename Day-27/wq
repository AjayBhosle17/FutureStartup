import java.util.*;
class Demo{

	static int [] array(int arr[]){

		for(int i =0 ;i<arr.length ;i++){

			if(arr[i]==arr[i+1]){

				arr[i]=arr[i]*2;
				arr[i+1]=0;
			}
		}
		return arr;
	}
	public static void main(String [] args){

		int arr[] = {1,2,2,1,1,0};

		int arr1[]= array(arr);

		System.out.println(Arrays.toString(arr));
	}
}
